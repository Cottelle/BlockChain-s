    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'blockchain' Server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": ["127.0.0.1","127.0.0.2"],
            // "args": ["0.0.0.0","127.0.0.1"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'blockchain'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=blockchain",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "blockchain",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'mining_comparaison'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=mining_comparaison",
                    "--package=blockchain"
                ],
                "filter": {
                    "name": "mining_comparaison",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}